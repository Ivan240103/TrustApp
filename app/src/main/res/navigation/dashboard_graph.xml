<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dashboard_graph"
	app:startDestination="@id/dashboard_fragment">

	<fragment
		android:id="@+id/dashboard_fragment"
		android:name="ivandesimone.trustapp.ui.dashboard.DashboardFragment"
		android:label="Dashboard"
		tools:layout="@layout/fragment_dashboard">
		<action
			android:id="@+id/action_dashboardFragment_to_listFragment"
			app:destination="@id/list_fragment" />
		<action
			android:id="@+id/action_dashboardFragment_to_detailsFragment"
			app:destination="@id/details_fragment" />
	</fragment>

	<fragment
		android:id="@+id/list_fragment"
		android:name="ivandesimone.trustapp.ui.list.ListFragment"
		android:label="Measures list"
		tools:layout="@layout/fragment_list">
		<action
			android:id="@+id/action_listFragment_to_detailsFragment"
			app:destination="@id/details_fragment" />
	</fragment>

	<fragment
		android:id="@+id/details_fragment"
		android:name="ivandesimone.trustapp.ui.details.DetailsFragment"
		android:label="Measure details"
		tools:layout="@layout/fragment_details" />

</navigation>