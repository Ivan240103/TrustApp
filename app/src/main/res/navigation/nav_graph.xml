<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/dashboard_fragment">
<!-- TODO: fix navigation with secondary fragments -->
	<fragment
		android:id="@+id/dashboard_fragment"
		android:name="ivandesimone.trustapp.ui.dashboard.DashboardFragment"
		android:label="Dashboard"
		tools:layout="@layout/fragment_dashboard" >
		<action
			android:id="@+id/action_dashboardFragment_to_listFragment"
			app:destination="@id/listFragment" />
		<action
			android:id="@+id/action_dashboardFragment_to_detailsFragment"
			app:destination="@id/detailsFragment" />
	</fragment>
	<fragment
		android:id="@+id/request_fragment"
		android:name="ivandesimone.trustapp.ui.request.RequestFragment"
		android:label="Request data"
		tools:layout="@layout/fragment_request" />
	<fragment
		android:id="@+id/configuration_fragment"
		android:name="ivandesimone.trustapp.ui.configuration.ConfigurationFragment"
		android:label="Personal area"
		tools:layout="@layout/fragment_configuration" />
	<fragment
		android:id="@+id/listFragment"
		android:name="ivandesimone.trustapp.ui.list.ListFragment"
		android:label="fragment_list"
		tools:layout="@layout/fragment_list" >
		<action
			android:id="@+id/action_listFragment_to_detailsFragment"
			app:destination="@id/detailsFragment" />
	</fragment>
	<fragment
		android:id="@+id/detailsFragment"
		android:name="ivandesimone.trustapp.ui.details.DetailsFragment"
		android:label="fragment_details"
		tools:layout="@layout/fragment_details" />
</navigation>