<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.configuration.ConfigurationFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/metamask_info_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:visibility="gone">

		<ImageView
			android:id="@+id/metamask_img"
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:src="@drawable/metamask"
			android:contentDescription="Metamask fox's logo"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

		<TextView
			android:id="@+id/session_topic_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Session topic"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toEndOf="@id/metamask_img"/>

		<TextView
			android:id="@+id/session_topic_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			app:layout_constraintTop_toBottomOf="@id/session_topic_label"
			app:layout_constraintStart_toStartOf="@id/session_topic_label"/>

		<TextView
			android:id="@+id/address_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Sepolia address"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toBottomOf="@id/session_topic_value"
			app:layout_constraintStart_toEndOf="@id/metamask_img"/>

		<TextView
			android:id="@+id/address_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=""
			app:layout_constraintTop_toBottomOf="@id/address_label"
			app:layout_constraintStart_toStartOf="@id/address_label"/>

	</androidx.constraintlayout.widget.ConstraintLayout>

	<TextView
		android:id="@+id/profile_state_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="24dp"
		android:text="You haven't connected any wallet yet" />

	<Button
		android:id="@+id/connect_wallet_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:backgroundTint="#FF5722"
		android:layout_marginHorizontal="16dp"
		android:text="Connect MetaMask wallet" />

	<androidx.fragment.app.FragmentContainerView
		android:id="@+id/settingsFragment"
		android:name="ivandesimone.trustapp.ui.settings.SettingsFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="16dp" />
</LinearLayout>