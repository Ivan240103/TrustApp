<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.dashboard.DashboardFragment">

	<TextView
		android:id="@+id/current_humidity_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Current humidity (not in real time!)"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/current_humidity_data"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="undefined"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/current_humidity_title" />

	<!--	aggiungere un grafico con i dati-->

	<androidx.cardview.widget.CardView
		android:id="@+id/card_list_humidity"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:descendantFocusability="blocksDescendants"
		android:focusable="true"
		android:foreground="?attr/selectableItemBackground"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/list_humidity_subtitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:text="Last 10 retrieved data" />

			<ListView
				android:id="@+id/list_humidity"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:layout_margin="16dp" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>